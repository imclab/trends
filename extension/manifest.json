{
  "name": "Firebase Trend Tracker",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Firebase Trend Tracker Extension.",
  "homepage_url": "https://www.firebase.com",

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://cdn.firebase.com https://*.firebaseio.com https://*.firebaseio-demo.com; object-src 'self'",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/icon19.png",
      "38": "assets/icon38.png"
    },
    "default_title": "Firebase Trend Tracker",
    "default_popup": "web/browser_action.html"
  },
  "content_scripts": [
    {
      "matches": ["https://trends.firebaseapp.com/login.html"],
      "js": ["js/auth.js", "lib/jquery-2.1.1.min.js"]
    }
  ],
  "permissions": [
    "declarativeContent",
    "*://firebase.desk.com/*",
    "*://groups.google.com/forum*",
    "*://stackoverflow.com/questions*",
    "https://trends.firebaseapp.com/login.html",
    "tabs",
    "storage"
  ]
}
